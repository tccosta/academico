<h1>Disciplinas</h1>

<table>
  <tr>
    <th>Codigo</th>
    <th>Nome</th>
    <th>Creditos</th>
    <th>Carga horaria</th>
    <th>Numero maximo de aluno</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @disciplinas.each do |disciplina| %>
  <tr>
    <td><%= disciplina.codigo %></td>
    <td><%= disciplina.nome %></td>
    <td><%= disciplina.creditos %></td>
    <td><%= disciplina.carga_horaria %></td>
    <td><%= disciplina.numero_maximo_de_aluno %></td>
    <td><%= link_to 'Exibir', disciplina %></td>
    <td><%= link_to 'Editar', edit_disciplina_path(disciplina) %></td>
    <td><%= link_to 'Excluir', disciplina, :confirm => 'Tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

